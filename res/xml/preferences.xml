<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="@string/pref_title_section1">

    	<CheckBoxPreference
        	android:key="pref_enable_it"
        	android:title="@string/pref_title_enable_it"
        	android:summary="@string/pref_summary_enable_it"
        	android:defaultValue="true" />  

   	</PreferenceCategory>
   	
    <PreferenceCategory
            android:title="@string/pref_title_section2">

    	<CheckBoxPreference
        	android:key="pref_do_it"
        	android:title="@string/pref_title_do_it"
        	android:summary="@string/pref_summary_do_it"
        	android:defaultValue="false" />  

   	</PreferenceCategory>
    

</PreferenceScreen>    
    
